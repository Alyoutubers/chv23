# Paramètres
param (
    [string]$Token,
    [string]$ChannelID
)

# Message à envoyer
$Message = "Client connecté sur le PC !"

# Création de l'objet pour envoyer le message
$Headers = @{
    "Authorization" = "Bot $Token"
    "Content-Type" = "application/json"
}

$Body = @{
    "content" = $Message
    "tts" = $false
} | ConvertTo-Json

# Envoi du message via l'API Discord
$Endpoint = "https://discord.com/api/channels/$ChannelID/messages"
Invoke-RestMethod -Uri $Endpoint -Method Post -Headers $Headers -Body $Body
